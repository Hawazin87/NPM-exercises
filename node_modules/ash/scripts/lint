echo "Running JSLint"

find ./examples -name "*.js" -print0 | xargs -0 jslint
find ./lib/adapters -name "*.js" -print0 | xargs -0 jslint
find ./lib/commands -name "*.js" -print0 | xargs -0 jslint
find ./lib/handlers -name "*.js" -print0 | xargs -0 jslint
find ./lib/helpers -name "*.js" -print0 | xargs -0 jslint
jslint ./lib/amd.js
jslint ./lib/cli.js
jslint ./lib/utils.js
find ./measure -name "*.js" -print0 | xargs -0 jslint
find ./tests -name "*.js" -print0 | xargs -0 jslint